{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "out",
        "outFile": "./out/dom-tools.js",
        "sourceMap": true,
        "target": "ES2019",
        "strict": true,
        "module": "none",
        "moduleResolution": "node",
        "preserveConstEnums": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "lib": [ "ESNext", "DOM", "DOM.Iterable" ]
    },
    "include": [
        "./*.ts",
        "./*.json"
    ]
}
